<!DOCTYPE html>
<html>
    <head>
        <title> HTML TABLE </title>
	     
        <style>
		    table,td,th{
			            border: 1px solid black;     
            }
            table{
			    border-collapse:collapse; 
				width: 300px;
				height: 200px;
			
			
            }			
	    </style>		
	</head>
	
	<body>
	    <table>
		    <caption> Student Details </caption>
		<thead>
		    <tr>
			    <!make table coloum name>
			    <th> ID </th>
                <th> Name </th>
				<th colspan="2"> Phone </th>
                				
			
            </tr>  			
		
		</thead>
		
		<tbody>
		    <tr>
			    <!make table row>
			    <td>101</td>
                <td>Razzak</td>
                <td rowspan="3">018</td>
                <td>017</td>				
            </tr>
             
            <tr>
			    <td>102</td>
                <td>Sabbir</td>
                <td>017</td>				
            </tr>

            <tr>
			    <td>103</td>
                <td>Sifat</td>
                <td>017</td>				
            </tr>			
		
		</tbody>
        
		</table>		
	
	</body>


</html>